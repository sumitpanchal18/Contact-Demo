<resources>

    <style name="Base.Theme.DragerHill" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/slate_gray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.DragerHill" parent="Base.Theme.DragerHill" />

    <style name="editTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingStart">16dp</item>
    </style>


    <style name="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContentTextStyle" parent="BaseTextStyle">
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>